         integer(I8P), intent(in)    :: i
         integer(I8P)                :: ii, jj

         !$omp target device(omp_get_default_device()) is_device_ptr(fptr_dev)
         !$omp distribute parallel do private (ii, jj)
         do jj=1, i
            do ii=1, i
               fptr_dev(ii, jj) = const
            enddo
         enddo
         !$omp end distribute parallel do
         !$omp end target
